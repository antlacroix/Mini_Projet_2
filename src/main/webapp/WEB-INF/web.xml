<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>/Views/home.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.mycompany.miniprojet2.servlets.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>forfeit</servlet-name>
        <servlet-class>com.mycompany.miniprojet2.servlets.forfeit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BackToGame</servlet-name>
        <servlet-class>com.mycompany.miniprojet2.servlets.BackToGame</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>inscription</servlet-name>
        <servlet-class>com.mycompany.miniprojet2.servlets.inscription</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.mycompany.miniprojet2.servlets.home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>com.mycompany.miniprojet2.servlets.profile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>inscription2</servlet-name>
        <servlet-class>com.mycompany.miniprojet2.servlets.inscription2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoff</servlet-name>
        <servlet-class>com.mycompany.miniprojet2.servlets.logoff</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addScore</servlet-name>
        <servlet-class>com.mycompany.miniprojet2.servlets.addScore</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>forfeit</servlet-name>
        <url-pattern>/forfeit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BackToGame</servlet-name>
        <url-pattern>/BackToGame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>inscription</servlet-name>
        <url-pattern>/inscription</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addScore</servlet-name>
        <url-pattern>/addScore</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>inscription2</servlet-name>
        <url-pattern>/inscription2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoff</servlet-name>
        <url-pattern>/logoff</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
